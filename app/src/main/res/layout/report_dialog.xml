<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff">

    <TextView
        android:id="@+id/issue_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Report"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@color/colorAccent"
        android:padding="40sp"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/issue_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What is wrong with this ?"
        android:layout_below="@+id/issue_title"
        android:padding="10sp"/>

    <EditText
        android:id="@+id/issue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/issue_question"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:inputType="textCapSentences"
        android:maxLines="1"/>


    <Button
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_gravity="right"
        android:layout_marginBottom="10sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_below="@id/issue"
        android:layout_alignRight="@+id/issue" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:layout_gravity="right"
        android:layout_marginBottom="10sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_below="@id/issue"
        android:layout_toLeftOf="@id/ok" />


</RelativeLayout>